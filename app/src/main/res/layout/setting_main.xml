<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/Setting_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/SettingMainAddServerButton"
        android:text="@string/addServer"
    />

    <Spinner
        android:id="@+id/SettingMainSelectServer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </Spinner>
    <TextView
        android:id="@+id/SettingMainCurrentServerTitle"
        style="@android:style/TextAppearance.DeviceDefault.SearchResult.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/SettingMainCurrentServerSummary"
        style="@android:style/TextAppearance.DeviceDefault.SearchResult.Subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <com.groth.android.videotoserver.views.ServerConfigView
        android:id="@+id/SettingMainCurrentServer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
